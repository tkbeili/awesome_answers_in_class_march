%h1.title Listing All Questions
= link_to "Create New Question", new_question_path, class: "btn btn-primary"
.questions-listing
  - @questions.each do |question|
    %div{id: dom_id(question)}
      %h2= link_to question.title, question
      %p.description= question.description
      %p
        Created On: #{formatted_date(question.created_at)}
    %hr


:javascript
  function generateUl(number) {
    var $ul = $("<ul></ul>");
    for(var i = 0; i < number; i++) {
      var $li = $("<li></li>", {text: "Element " + i});
      $ul.append($li);
    }
    $("body").append($ul);
  }
  generateUl(10);